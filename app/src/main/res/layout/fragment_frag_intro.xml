<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PlaysVideo.FragIntro">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="53dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_marginLeft="10dp"
                android:id="@+id/img_c"
                android:layout_centerVertical="true"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:cardCornerRadius="15dp"
                >
                <ImageView
                    android:id="@+id/head"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/c"
                    android:scaleType="fitXY"

                    />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:id="@+id/hAt"
                android:layout_toRightOf="@id/img_c"
                android:layout_centerVertical="true"
                android:layout_width="260dp"
                android:layout_height="32dp"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/name"
                    android:text="11111111111111"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_width="240dp"
                    android:layout_height="0dp"/>
                <TextView
                    android:text="00000000000000"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_width="240dp"
                    android:layout_height="0dp"/>

            </LinearLayout>
            <RelativeLayout
                android:background="@color/icon"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/hAt"
                android:orientation="horizontal"
                android:layout_width="66dp"
                android:layout_height="24dp">
                <TextView
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+关注"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="差不敌富庶繁华vSUV股东分红"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/btn_translate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20sp"
            android:text="立即翻译"
            android:textColor="#03A9F4"
            android:textSize="15sp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:visibility="gone"
            android:id="@+id/translate"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/like"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:src="@drawable/nolike" />
            <TextView
                android:layout_centerHorizontal="true"
                android:layout_below="@id/like"
                android:text="0"
                android:id="@+id/tv_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/nolike"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:src="@drawable/like" />
            <TextView
                android:layout_centerHorizontal="true"
                android:layout_below="@id/nolike"
                android:id="@+id/tv_nolike"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/insertcoins"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:src="@drawable/insertcoins" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/insertcoins"
                android:layout_centerHorizontal="true"
                android:text="@string/InsertCoins" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/star"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:src="@drawable/star" />
            <TextView
                android:layout_centerHorizontal="true"
                android:layout_below="@id/star"
                android:text="8"
                android:id="@+id/tv_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/share"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_margin="4dp"
                android:src="@drawable/share"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/share"
                android:layout_centerHorizontal="true"
                android:text="@string/Share" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
        <ListView
            android:layout_marginTop="10dp"
            android:divider="@null"
            android:dividerHeight="25dp"
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="500dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="没有更多了"
        android:layout_gravity="center"
        />
</LinearLayout>