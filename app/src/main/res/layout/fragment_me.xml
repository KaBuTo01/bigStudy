<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragment.Fragment_me">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="44dp">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <ImageView
               android:id="@+id/tv"
               android:layout_margin="11dp"
               android:layout_width="21dp"
               android:layout_height="21dp"
               android:src="@drawable/tv"
               android:layout_toLeftOf="@id/ewm"
               />

           <ImageView
               android:id="@+id/ewm"
               android:layout_width="21dp"
               android:layout_height="21dp"
               android:layout_marginStart="11dp"
               android:layout_marginTop="11dp"
               android:layout_marginEnd="11dp"
               android:layout_marginBottom="11dp"
               android:src="@drawable/ewm"
               android:layout_toLeftOf="@id/skin"
               />
           <ImageView
               android:id="@+id/skin"
               android:layout_margin="11dp"
               android:layout_width="21dp"
               android:layout_height="21dp"
               android:src="@drawable/skin"
               android:layout_toLeftOf="@id/translate"
               />

           <ImageView
               android:id="@+id/translate"
               android:layout_width="21dp"
               android:layout_height="21dp"
               android:layout_alignParentEnd="true"
               android:layout_marginStart="11dp"
               android:layout_marginTop="11dp"
               android:layout_marginEnd="11dp"
               android:layout_marginBottom="11dp"
               android:src="@drawable/translate" />
       </RelativeLayout>
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="30dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/login_f"
                android:layout_margin="15dp"
                >
                <ImageView
                    android:id="@+id/login"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/user"
                    android:scaleType="fitXY"
                    />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/login_f"
                android:text="@string/Login"
                android:textColor="@color/black"
                android:textSize="18sp" />
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/open"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"
                />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_centerHorizontal="true"
                android:text="-"
                android:textSize="20sp" />
            <TextView
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:text="@string/Show"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_centerHorizontal="true"
                android:text="-"
                android:textSize="20sp" />
            <TextView
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:text="@string/Focus"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_centerHorizontal="true"
                android:text="-"
                android:textSize="20sp" />
            <TextView
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:text="@string/Fans"
                />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/gg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/gg" />
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="59dp">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_above="@id/download_text"
                android:layout_centerHorizontal="true"
                android:src="@drawable/download" />

            <TextView
                android:id="@+id/download_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:text="@string/Download" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="59dp">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_above="@id/history_text"
                android:layout_centerHorizontal="true"
                android:src="@drawable/history" />
            <TextView
                android:layout_marginTop="4dp"
                android:text="@string/History"
                android:id="@+id/history_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="59dp">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_above="@id/collect_text"
                android:layout_centerHorizontal="true"
                android:src="@drawable/collect" />
            <TextView
                android:layout_marginTop="4dp"
                android:text="@string/Collect"
                android:id="@+id/collect_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="59dp">
            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_above="@id/start_text"
                android:layout_centerHorizontal="true"
                android:src="@drawable/start" />

            <TextView
                android:id="@+id/start_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:text="@string/Start" />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <RelativeLayout
            android:layout_width="368dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true">
            <androidx.cardview.widget.CardView
                android:id="@+id/up"
                android:layout_width="22dp"
                android:layout_height="19dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/icon"
                    android:gravity="center"
                    android:text="up"
                    android:textColor="@color/white" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/up_tit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/up"
                android:layout_marginLeft="12dp"
                android:text="@string/ReceiveAward" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/up_tit"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@id/up"
                android:text="@string/FirstVideo"
                android:textColor="@color/black" />

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:cardBackgroundColor="@color/icon"
                app:cardCornerRadius="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/Money"
                    android:textColor="@color/white" />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:textSize="20sp"
            android:text="@string/RecommendServe"
            android:textColor="@color/black" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/my_book"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_above="@id/my_book_text"
                android:layout_centerHorizontal="true"
                android:src="@drawable/book" />

            <TextView
                android:id="@+id/my_book_text"
                android:text="@string/MyBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:textColor="@color/black" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/sim"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_above="@id/sim_text"
                android:layout_centerHorizontal="true"
                android:src="@drawable/sim_card" />

            <TextView
                android:id="@+id/sim_text"
                android:text="@string/GratisSim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:textColor="@color/black" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/clothing"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_above="@id/clothing_text"
                android:layout_centerHorizontal="true"
                android:src="@drawable/clothing" />

            <TextView
                android:id="@+id/clothing_text"
                android:text="@string/Clothing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:textColor="@color/black" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/moneybag"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_above="@id/moneybag_text"
                android:layout_centerHorizontal="true"
                android:src="@drawable/moneybag" />

            <TextView
                android:id="@+id/moneybag_text"
                android:text="@string/MyMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:textColor="@color/black" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/game"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_above="@id/game_text"
                android:layout_centerHorizontal="true"
                android:src="@drawable/gamezx" />

            <TextView
                android:id="@+id/game_text"
                android:text="@string/GameCentre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:textColor="@color/black" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/vip_centre"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_above="@id/vip_centre_text"
                android:layout_centerHorizontal="true"
                android:src="@drawable/vip_bag" />

            <TextView
                android:id="@+id/vip_centre_text"
                android:text="@string/VipCentre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:textColor="@color/black" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/tv_zb"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_above="@id/tv_text"
                android:layout_centerHorizontal="true"
                android:src="@drawable/tvzb" />

            <TextView
                android:id="@+id/tv_text"
                android:text="@string/LiveStreaming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:textColor="@color/black" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/creation"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_above="@id/creation_text"
                android:layout_centerHorizontal="true"
                android:src="@drawable/light" />

            <TextView
                android:id="@+id/creation_text"
                android:text="@string/Creation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:textColor="@color/black" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>